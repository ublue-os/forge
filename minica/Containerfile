# Source Image
FROM docker.io/library/golang:1.24@sha256:a98400bb38a9bd6de5a30c80dc9e2f4969510516cef343bb637f4dcdab71f20b

# Copy script
WORKDIR /certs
COPY certificates.sh .
RUN chmod +x ./certificates.sh

# Install minica
RUN go install github.com/jsha/minica@latest

# Container start command
CMD ["/certs/certificates.sh"]
