# Source Image
FROM docker.io/library/golang:1.25@sha256:b773c94fd926723a415b28e615016a49793764e270566a82c6a47afb4c52f7de

# Copy script
WORKDIR /certs
COPY certificates.sh .
RUN chmod +x ./certificates.sh

# Install minica
RUN go install github.com/jsha/minica@latest

# Container start command
CMD ["/certs/certificates.sh"]
